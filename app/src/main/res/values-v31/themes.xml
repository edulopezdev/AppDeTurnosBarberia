<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.AppTurnosBarberia" parent="Theme.MaterialComponents.Light.NoActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
    <item name="colorOnPrimary">@color/colorNeutralBlack</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/colorSecondary</item>
    <item name="colorSecondaryVariant">@color/colorPrimaryForest</item>
    <item name="colorOnSecondary">@color/colorNeutralWhite</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    <!-- Surface colors -->
    <item name="colorError">@color/colorFeedbackError</item>
    <item name="colorSurface">@color/colorNeutralWhite</item>
    <item name="colorOnBackground">@color/colorNeutralBlack</item>
    <item name="colorOnSurface">@color/colorNeutralBlack</item>
  </style>
  <style name="Theme.AppTurnosBarberia.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>
  <style name="Theme.AppTurnosBarberia.Splash" parent="Theme.AppTurnosBarberia.NoActionBar">
    <item name="android:windowBackground">@drawable/splash_screen</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowFullscreen">true</item>
    <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    <item name="android:statusBarColor">@color/colorNeutralWhite</item>
    <!-- Android 12+ SplashScreen API - sin cÃ­rculo gris -->
    <item name="android:windowSplashScreenBackground">@color/colorNeutralWhite</item>
    <item name="android:windowSplashScreenAnimatedIcon">@drawable/logo_verde_400</item>
  </style>
</resources>
